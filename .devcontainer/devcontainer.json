	"containerEnv": {
		"SHELL": "/bin/zsh"
	},	
	"features": {
		"ghcr.io/devcontainers/features/python:1": {
			"version": "3.14",
			"installTools": "false"
		},
		"ghcr.io/devcontainers/features/terraform:1": {
			"version": "1.10.5",
			"terragrunt": "0.31.1"
		},
		"ghcr.io/dhoeric/features/terraform-docs:1": {
			"version": "0.19.0"
		},
		"node": {
			"version": "lts",
			"nodeGypDependencies": true
		},
		"ghcr.io/devcontainers/features/aws-cli:1": {},		
		"azure-cli": "latest"

	},
	"customizations": {
		"vscode": {
			"extensions": [ 
				"GitHub.copilot",
				"HashiCorp.HCL",
				"hashicorp.terraform",
				"redhat.vscode-yaml",
				"golang.go"
			]
		}
	}
}