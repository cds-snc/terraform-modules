{
	"name": "terraform-modules",
	"image": "mcr.microsoft.com/devcontainers/go:bullseye",
	"features": {
		"ghcr.io/devcontainers/features/python:1": {
			"installTools": "false"
		},
		"ghcr.io/devcontainers/features/terraform:1": {
			"version": "1.6.1",
			"terragrunt": "0.31.1"
		},
		"ghcr.io/dhoeric/features/terraform-docs:1": {
			"version": "latest"
		},
		"azure-cli": "latest"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"GitHub.copilot",
				"HashiCorp.HCL",
				"hashicorp.terraform",
				"redhat.vscode-yaml",
				"golang.go"
			]
		}
	}
}