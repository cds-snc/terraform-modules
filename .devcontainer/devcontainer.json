{
	"name": "Terraform",
	"build": {
		"dockerfile": "Dockerfile",
		"context": "..",
		"args": {	
			"SHELLCHECK_VERSION": "0.7.2",
			"SHELLCHECK_CHECKSUM": "70423609f27b504d6c0c47e340f33652aea975e45f312324f2dbf91c95a3b188",
			"TERRAFORM_VERSION": "1.0.3",
			"TERRAFORM_CHECKSUM": "99c4866ffc4d3a749671b1f74d37f907eda1d67d7fc29ed5485aeff592980644",
			"TERRAFORM_DOCS_VERSION": "0.14.1",
			"TERRAFORM_DOCS_VERSION_CHECKSUM": "f0a46b13c126f06eba44178f901bb7b6b5f61a8b89e07a88988c6f45e5fcce19"
		}
	},

	"containerEnv": {
		"SHELL": "/bin/zsh"
	},

	"settings": {
		"[terraform]": {
			"editor.formatOnSave": true
		}
	},

	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"hashicorp.terraform",
		"redhat.vscode-yaml"
	],

	// Comment out connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "vscode"
}